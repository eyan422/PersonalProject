package employee;

class Employee {
	String name;
	int age;
	
	Employee() {
		//
		//name = "John";
		//age = 25;
		//
		this(null,0);
	}
	
	Employee(String newName) {
		name = newName;
		age = 25;
	}
	
	Employee(int newAge, String newName) {
		name = newName;
		age = newAge;
	}
	
	Employee(String newName, int newAge) {
		name = newName;
		age = newAge;
	}
	
	public int daysOffWork(int... days) {
		int daysOff = 0;
		
		for (int i = 0; i < days.length; i++)
			daysOff += days[i];
		
		return daysOff;
	}
}

